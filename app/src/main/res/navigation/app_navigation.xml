<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.gloomhavestoryline2.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.gloomhavestoryline2.ui.home.ProfileFragment"
        android:label="User profile"
        tools:layout="@layout/fragment_profile"/>
    <fragment
        android:id="@+id/joinGame"
        android:name="com.example.gloomhavestoryline2.ui.home.JoinGameFragment"
        android:label="Join game"
        tools:layout="@layout/fragment_join_game">
        <argument
            android:name="gameID"/>
        <deepLink app:uri="www.gloomhaven.com/{gameID}"/>
    </fragment>
</navigation>
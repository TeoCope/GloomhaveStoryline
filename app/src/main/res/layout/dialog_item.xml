<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="item"
            type="com.example.gloomhavestoryline2.db.entities.Item" />

        <variable
            name="gameViewModel"
            type="com.example.gloomhavestoryline2.view_model.GameViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/edit_text_vertical_margin"
        android:paddingHorizontal="@dimen/fragment_horizontal_margin">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{item.fullName}"
            android:textColor="?attr/colorOnSurface"
            android:textAppearance="?attr/textAppearanceHeadlineSmall"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_item" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@{item.effect}"
                android:textAlignment="center" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.TextButton.Dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@{item.halfPrice}"
            android:onClick="@{() -> gameViewModel.sellItem(item)}"/>

    </LinearLayout>
</layout>